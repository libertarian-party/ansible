[Unit]
After=network.target
Before=partynest.service
BindsTo=partynest.service
Description={{ partynest__worker_descr }}

[Service]
Environment=BUNDLE_USER_HOME=/opt/partynest/shared/bundle
ExecStart=/usr/local/rvm/bin/rvm ruby-2.6.2@partynest do bundle exec sidekiq --environment production
Group=partynest
Restart=always
RestartSec=1
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=partynest-worker
Type=simple
User=partynest
WorkingDirectory=/opt/partynest/current

[Install]
WantedBy=multi-user.target
